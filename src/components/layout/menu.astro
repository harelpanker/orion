---
import DrawerSide from '@components/layout/menu/drawer-side.astro';
import MobileIcon from '@components/layout/menu/mobile-icon.astro';
import Logo from '@components/layout/menu/logo.astro';
import DesktopNav from '@components/layout/menu/desktop-nav.astro';
---

<div class='drawer relative z-50'>
	<input id='my-drawer-2' type='checkbox' class='drawer-toggle' />
	<div class='drawer-content flex flex-col'>
		<!-- Navbar -->
		<div class='navbar bg-base-300 w-full'>
			<div class='flex items-center justify-between w-full'>
				<Logo />
				<DesktopNav />
			</div>

			<div class='flex-none lg:hidden'>
				<label for='my-drawer-2' aria-label='open sidebar' class='btn btn-square btn-ghost p-0'>
					<MobileIcon />
				</label>
			</div>
		</div>
		<!-- Page content here -->
		<!-- <slot /> -->
	</div>
	<DrawerSide />
</div>
